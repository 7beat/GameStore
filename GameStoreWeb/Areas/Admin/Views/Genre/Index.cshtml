@model IEnumerable<Genre>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Genre List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Genre" asp-action="Create">
                <i class="bi bi-plus-circle"></i> &nbsp; Add new Genre
            </a>
        </div>
    </div>
</div>
<br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Genre Name
            </th>
            <th style="width:70%">
                Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="20%">
                    @item.Name
                </td>
                <td width="60%">
                    <div style="max-width:500px">
                        @Html.Raw(item.Description)
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Genre" asp-action="Edit" asp-route-id="@item.Id"
                           class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="Genre" asp-action="Delete" asp-route-id="@item.Id"
                           class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
