@model Platform

<form method="post" class="border p-3 mt-4">
    <div class="row pb-2">
        <div class="col-12">
            <h2 class="text-primary">Edit Platform</h2>
            <hr />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-3">
            <label asp-for="Name">Name</label>
        </div>
        <div class="col-md-9">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary" style="width:100%">Update</button>
        </div>
        <div class="col-md-6">
            <a asp-controller="Platform" asp-action="Index" class="btn btn-secondary" style="width:100%">
                Back to list
            </a>
        </div>
    </div>
</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
